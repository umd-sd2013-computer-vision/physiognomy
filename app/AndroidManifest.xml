<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.timetravellingtreasurechest.app"
    android:versionCode="1"
    android:versionName="1.0-SNAPSHOT" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />
  	<uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
  	<uses-feature android:name="android.hardware.camera.flash" android:required="false" />
  	<uses-feature android:name="android.hardware.camera.front" android:required="false" />
  	<uses-feature android:name="android.hardware.camera.any" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.timetravellingtreasurechest.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.timetravellingtreasurechest.gui.ManageReportActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.timetravellingtreasurechest.gui.ShareActivity"
            android:label="@string/title_activity_share"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.timetravellingtreasurechest.gui.ConfigureCameraActivity"
            android:label="@string/title_activity_config_camera" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.timetravellingtreasurechest.app.MainActivity" />
        </activity>
    </application>

</manifest>